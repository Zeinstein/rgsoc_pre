<h2>Kívánság szerkesztése</h2>

<form action="/wishes/<%= @wish.id %>" method="post">
  <p><input type="hidden" name="_method" value="put"/></p>
  <%= form_field "Kívánság", @wish, :body, :textarea %>
  <p><input type="submit" value="Mehet"/></p>
</form>

<p><a href="/wishes/<%= @wish.id %>">vissza</a></p>

